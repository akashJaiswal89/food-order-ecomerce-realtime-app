<section class="cart py-16">

    
    <%if(session.cart){%>
    <div class="order container mx-auto w-1/2 ">
        <div class="flex item-center border-b border-gray-300 pb-4">
            <img src="./img/cart.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="Food list">
          <% for(let pizza of Object.values(session.cart.items)){ %>
            <div class="flex items-center my-8">
                <img class="w-24" src="./img/<%=pizza.item.img%>" alt="">
                <div class="flex-1 ml-4 ">
                    <h1 class="sizeCart"><%=pizza.item.name%></h1>
                    <span class="sizeCart"><%=pizza.item.size%></span>
                </div>
                <span class="flex-1 pcs"><%=pizza.qty%>pcs</span>
                <span class="font-bold flex-1">₹<%=pizza.qty*Number(pizza.item.price)%></span>
            </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right py-4">
            <div class="formCart">
                <span class="text-lg font-bold ">Total Amount</span>
                <span class="amount text-2xl font-bold ml-2">₹<%=session.cart.totalPrice%></span>
            </div>
            <%if(user){%>
            <div>
                <form class="mt-4 formCart" action="/orders" method="POST">
                    <input name="phone" type="text" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone Number">
                    <input name="address" type="text" class="border border-gray-400 p-2 w-1/2" placeholder="Address">

                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Order Now</button> 
                    </div>

                </form>
            </div>
            <%}else{%>
            <a href="/login" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login to continue</a>
            <%}%>
        </div>
    </div>
    <%}else{%>
    
     <div class="empty-cart">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Cart Empty</h1>
            <p>You Probably haven't ordered a Food yet.</p>
            <img class="mx-auto" src="./img/empety.webp" alt="" />
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold ">Go To Home</a>
        </div>
    </div>
    <%}%>
</section>